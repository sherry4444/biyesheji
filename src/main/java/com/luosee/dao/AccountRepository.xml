<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.luosee.dao.AccountRepository">
    <select id="findOneByEmail" resultType="com.luosee.account.Account" parameterType="java.lang.String">
        SELECT * from Account WHERE email=#{username}
    </select>

    <insert id="save" parameterType="com.luosee.account.Account">
        INSERT  INTO  Account(email,password,role,created) VALUES(#{email},#{password},#{role})
    </insert>

    <select id="findOne" resultType="com.luosee.account.Account" parameterType="long" >
        SELECT * FROM  Account WHERE id=#{id}
    </select>
</mapper>